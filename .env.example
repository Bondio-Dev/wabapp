# Основные настройки
NODE_ENV=production
PORT=3001

# Gupshup WhatsApp API
# Получите на https://www.gupshup.io/whatsapp/dashboard
GUPSHUP_API_KEY=ваш_gupshup_api_key
GUPSHUP_APP_NAME=ваше_приложение_gupshup
GUPSHUP_SOURCE_NUMBER=ваш_whatsapp_номер

# amoCRM API
# Создайте интеграцию в настройках amoCRM
AMO_SUBDOMAIN=ваш_поддомен
AMO_CLIENT_ID=ваш_client_id
AMO_CLIENT_SECRET=ваш_client_secret
AMO_REDIRECT_URI=http://83.166.238.230:3001/api/amo/callback

# Токены (заполнятся автоматически после авторизации)
AMO_ACCESS_TOKEN=
AMO_REFRESH_TOKEN=

# ID воронки и статуса (опционально)
AMO_PIPELINE_ID=
AMO_STATUS_ID=

# Дополнительные настройки
WEBHOOK_SECRET=webhook_secret_key
LOG_LEVEL=info
